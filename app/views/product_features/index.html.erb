<p id="notice"><%= notice %></p>

<row>

  <div class="col-sm-2 ">
    <h3>Listing Product Features</h3>
  </div>

  <div class="col-sm-3 col-sm-offset-1">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-5 ">
    <%= paginate @product_features %>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Product</th>
      <th>Pfeature</th>
      <th>Active status</th>
      <th>Sort</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_features.each do |product_feature| %>
      <tr>
        <td><%= product_feature.name %></td>
        <td><%= product_feature.product %></td>
        <td><%= product_feature.pfeature %></td>
        <td><%= product_feature.active_status %></td>
        <td><%= product_feature.sort %></td>
        <td><%= link_to 'Show', product_feature %></td>
        <td><%= link_to 'Edit', edit_product_feature_path(product_feature) %></td>
        <td><%= link_to 'Destroy', product_feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product feature', new_product_feature_path %>
